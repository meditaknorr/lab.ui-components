{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src/app/",
    "paths": {
      "@@pages/*": [
        "pages/*"
      ],
      "@@components/*": [
        "components/*"
      ],
      "@@reduxStore/*": [
        "store/redux/*"
      ],
      "@@contexStore/*": [
        "store/context/*"
      ],
      "@@routers/*": [
        "routers/*"
      ],
      "@@configs/*": [
        "configs/*"
      ],
      "@@utils/*": [
        "utils/*"
      ],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests/*",
    "node_modules",
    "build",
    "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}